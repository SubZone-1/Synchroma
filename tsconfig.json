{
  "compilerOptions": {
    "target": "ES2017", 
    "lib": ["DOM"],
    "module": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": [
    "src/**/*.ts"
  ],
}
